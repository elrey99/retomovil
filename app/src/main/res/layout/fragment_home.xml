<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
    android:id="@+id/text_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--    Codigo Caja 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="25dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgp1"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lapiz_labial" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSucName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lapiz labial" />

                    <TextView
                        android:id="@+id/tvSucDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Un color para cada dia en tus labios" />

                    <TextView
                        android:id="@+id/tvSucLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30.000" />


                </LinearLayout>
            </LinearLayout>
            <!--    Codigo Caja 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgP2"
                    android:layout_width="171dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/crema" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNameP1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cremas" />

                    <TextView
                        android:id="@+id/tvServDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crema para el Humectante para la piel" />

                    <TextView
                        android:id="@+id/tvServPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40.000" />

                </LinearLayout>
            </LinearLayout>
            <!--    Codigo Caja 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSombras"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sombras" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sombras" />

                    <TextView
                        android:id="@+id/tvProDesciption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mejora tu look dandele un acavado perfecto" />

                    <TextView
                        android:id="@+id/tvProPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10.000" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>