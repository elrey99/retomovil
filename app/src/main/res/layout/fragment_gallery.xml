<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">




    <ScrollView
        android:layout_width="400dp"
        android:layout_height="459dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gallery">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgLabial"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lapiz_labial" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSucName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lapiz labial" />

                    <TextView
                        android:id="@+id/tvSucDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Un color para cada dia en tus labios" />

                    <TextView
                        android:id="@+id/tvSucLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30.000" />

                    <EditText
                        android:id="@+id/edtSuc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <Button
                        android:id="@+id/lapiz_labial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="Seleccion"
                        android:text="Agregar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgCrema"
                    android:layout_width="171dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/crema" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvServName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cremas" />

                    <TextView
                        android:id="@+id/tvServDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crema para el Humectante para la piel" />

                    <TextView
                        android:id="@+id/tvServPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40.000" />

                    <EditText
                        android:id="@+id/edtServ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <Button
                        android:id="@+id/crema"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="Seleccion"
                        android:text="Agregar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSombras"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sombras" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sombras" />

                    <TextView
                        android:id="@+id/tvProDesciption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mejora tu look dandele un acavado perfecto" />

                    <TextView
                        android:id="@+id/tvProPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10.000" />

                    <EditText
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <Button
                        android:id="@+id/sombras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="Seleccion"
                        android:text="Agregar" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

</androidx.constraintlayout.widget.ConstraintLayout>


